extends layout 

block content 
    h1= title 
    //-
     from bookinstanceController.js line 11
    ul 
        each val in bookinstance_list 
            li 
                a(href=val.url, style="text-decoration:none") #{val.book.title} : #{val.imprint} - 
                    if (val.status == 'Available') 
                        span.text-success #{ val.status}
                    else if (val.status == 'Maintaince')
                        span.text-danger #{val.status}
                    else 
                        span.text-warning #{val.status}
                    if (val.status == 'Available')
                        span (Due : #{val.due_back})
        else 
            li There are no book copines in this library.
          
