extends layout 

block content 
    h1 Author: #{author.name}
    p Date of birth : #{author.birth} 
    p Date of death : #{author.death}

    div(class='container')
        div(class='row')
            div(class='col-sm-2')
                h4 Books 
            div(class='col-sm-10')

                each book in author_books
                    ul
                        li 
                            a(href=book.url) #{book.title}
                        span #{book.summary}
                else
                    p This author has no books